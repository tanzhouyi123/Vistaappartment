<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Payment record title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Record"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="16dp" />

    <!-- Payment record details -->
    <TextView
        android:id="@+id/payment_record_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="16dp" />

    <!-- Generate record button -->
    <Button
        android:id="@+id/generate_record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Record"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Send reminder button -->
    <Button
        android:id="@+id/send_reminder_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Reminder"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

</LinearLayout>
