<?xml version="1.0" encoding="utf-8"?>
<!-- activity_search_resident.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Resident Info"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Resident ID -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resident ID" />

    <EditText
        android:id="@+id/editTextResidentID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter resident ID" />

    <!-- Search Button -->
    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search" />

    <!-- Display Resident Info -->
    <TextView
        android:id="@+id/textViewResidentInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resident Information" />

</LinearLayout>
